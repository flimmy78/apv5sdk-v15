clean:
	$(MAKE) -C $(PKG_BUILD_DIR) $(MAKE_ARGS) clean
	
install:pro_ctl_mod
	mkdir -p $(INSTALLDIR)
	cd $(PKG_BUILD_DIR) && \
	cp -f pro_ctl_mod.ko $(INSTALLDIR)/pro_ctl_mod.ko
