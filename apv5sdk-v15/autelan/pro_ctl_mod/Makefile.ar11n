else ifeq ($(BOARD_TYPE),armada370)
pro_ctl_mod:
	$(MAKE) -C $(PKG_BUILD_DIR)  $(MAKE_ARGS) clean  
	$(MAKE) -C $(PKG_BUILD_DIR)  $(MAKE_ARGS) ARMADA370=1
