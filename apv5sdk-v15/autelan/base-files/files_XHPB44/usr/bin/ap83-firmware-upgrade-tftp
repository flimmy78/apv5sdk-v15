#!/bin/sh

if [ $# -ne 2 ];
then
	echo "$0 <firmware-file> <tftpserver-ip-address>"
	exit 1
fi

# Get firmware image 
echo "*** Getting firmware file $1 using tftp server $2"
tftp -g -l /tmp/wnap210_firmware.tar -r $1 $2
if [ $? -ne 0 ];
then
	exit 2
fi

nohup /usr/bin/ap83-firmware-upgrade-file /tmp/wnap210_firmware.tar > /tmp/nohup.out
touch 1
if [ $? -ne 0 ]; then
        exit 1
    fi
exit 0
